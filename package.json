{
  "name": "bloghead-v2",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:types": "supabase gen types typescript --db-url \"$DATABASE_URL\" > src/types/database.ts",
    "db:reset": "supabase db reset",
    "db:push": "supabase db push",
    "db:diff": "supabase db diff",
    "db:migrate": "supabase migration new",
    "db:seed-users": "tsx scripts/seed-test-users.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ElSalvatore-sys/bloghead-v2.git"
  },
  "homepage": "https://github.com/ElSalvatore-sys/bloghead-v2#readme",
